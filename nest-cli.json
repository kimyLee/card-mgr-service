{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin"
      }
    ],
    "assets": [
      {
        "include": "../client/",
        "outDir": "dist/client/"
      }
    ],

    "watchAssets": true
  },
  "generateOptions": {
    "spec": false
  }
}
